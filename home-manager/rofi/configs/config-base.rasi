configuration {
    modi: "drun";
    icon-theme: "Numix-Circle";
    show-icons: true;
    disable-history: false;
    drun-display-format: "{icon} {name}";
    hide-scrollbar: true;
    display-drun: "ï”—  Apps ";
    sidebar-mode: true;
    font: "JetBrains Mono Regular 13";
    terminal: "kitty";
    
    // mouse behavior
    click-to-exit: true;
    me-select-entry: "";  // Disable mouse select
    me-accept-entry: "MousePrimary"; // Left click to accept/launch
    scroll-method: 1;
}
